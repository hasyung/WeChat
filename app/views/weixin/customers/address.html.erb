<head>
<title><%= @customer.address.blank? ? '新增' : '修改' %>收货信息</title>
</head>

<body>
<%= simple_form_for :customer, url: address_weixin_customers_path(customer_id: @customer, directory_id: params[:directory_id], kit_id: params[:kit_id]) do |f| %>
   <%= f.simple_fields_for :address, @customer.address.blank? ? @customer.build_address : @customer.address do |profile| %>
      <div class="pro-addlist">
      <dl>
         <%= profile.input :name, input_html: {  style: "width: 30%" } %>
      </dl>
      <dl>
         <%= profile.input :phone, input_html: {  style: "width: 40%" } %>
      </dl>
      <dl>
         <%= profile.input :postcode, input_html: {  style: "width: 20%" } %>
      </dl>
      <dl>
         <%= profile.input :address, input_html: {  style: "width: 70%" } %>
      </dl>
      <button type="submit" id="customer-change" class="btn btn-yellow">提交保存</button>
      </div>


      
   <% end %>
<% end %>


</body>
</html>

