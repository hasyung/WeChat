<head>
<title>待审核</title>
</head>

<body>
<%= bootstrap_flash %>
<div class="pro-contrl last-contrl">
  <a href="#" class="btn active">待审核</a>
  <a href="<%= records_weixin_indents_path(customer_id: params[:customer_id]) %>" class="btn">已通过</a>
</div>

<% if @models.present? %>
    <% @models.each do |key, value| %>
      <div class="pro-title"><%= key %></div>
      <% value.each do |indent|%>
        <div class="pro-addlt">
          <div class="pro-num"><%= t('activerecord.attributes.indent.code') %>：<%= indent.code %></div>
          <img src="<%= indent.kit.cover.middle.url %>"> <div class="info">
            <a href="<%= check_weixin_indent_path(indent, customer_id: params[:customer_id]) %>"><%= indent.kit.title %></a><br>
            申请时间：<%= I18n.l indent.created_at.to_date, format: :long %><br>
            数量 * <%= indent.item_count %>
          </div>
        </div>
      <% end %>
      <div class="pro-jg"></div>
    <% end %>
  <% end %>

</body>