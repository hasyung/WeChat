= simple_form_for @reply, url: assign_admin_reply_path(@reply), remote: true do |f|
  .modal-header
    button.close data-dismiss='modal' aria-hidden='true' &times;
    h3 = t("breadcrumbs.admin.replies.assign")
  .modal-body
    = f.association :admin_user, label_method: :realname, value_method: :id, input_html: { data: { width: '100%' } }
  .modal-footer
    button.btn data-dismiss='modal' aria-hidden='true' = t('buttons.close')
    button.btn.btn-primary = t('buttons.ok')